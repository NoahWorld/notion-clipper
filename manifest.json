{
  "manifest_version": 3,
  "name": "DevClip for Notion",
  "version": "0.3.0",
  "description": "Developer-focused web clipper for Notion. Save articles, code snippets, and technical resources instantly.",
  "action": {
    "default_title": "Save to Notion",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://api.notion.com/*"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
